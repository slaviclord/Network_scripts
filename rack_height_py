def calculate_rack_height():
    # Ask for user input on the number of RUs
    total_ru = int(input("Enter the number of RUs: "))
    ru_height_in_inches = 1.75  # Height of one RU in inches
    total_height_in_inches = total_ru * ru_height_in_inches
    total_height_in_feet = total_height_in_inches / 12  # Convert inches to feet
    total_height_in_meters = total_height_in_inches * 0.0254  # Convert inches to meters
    
    print(f"Total RUs: {total_ru}")
    print(f"Height in Inches: {total_height_in_inches:.2f} inches")
    print(f"Height in Feet: {total_height_in_feet:.2f} feet")
    print(f"Height in Meters: {total_height_in_meters:.2f} meters")

if __name__ == "__main__":
    calculate_rack_height()
